    "version": "0.3.3",
    "private": true,
    "author": "MyHbarWallet <support@myhbarwallet.com>",
    "scripts": {
        "serve": "vue-cli-service serve",
        "build": "vue-cli-service build",
        "test": "npm-run-all test:unit",
        "lint": "npm-run-all lint:js lint:css",
        "ci": "npm-run-all lint test:unit build",
        "electron:build": "vue-cli-service electron:build",
        "electron:serve": "vue-cli-service electron:serve",
        "electron:generate-icons": "electron-icon-builder --input=./public/android-chrome-512x512.png --output=build --flatten",
        "lint:css": "stylelint --fix 'src/**/*.vue' 'src/**/*.css'",
        "lint:js": "vue-cli-service lint",
        "postinstall": "electron-builder install-app-deps",
        "postuninstall": "electron-builder install-app-deps",
        "test:e2e": "vue-cli-service test:e2e",
        "test:unit": "vue-cli-service test:unit"
    },
    "main": "background.js",
    "dependencies": {
        "@hashgraph/sdk": "^0.6.1",
