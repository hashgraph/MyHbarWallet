        "@vue/cli-plugin-unit-jest": "^4.0.0-rc.7",
        "@vue/cli-service": "^4.0.0-rc.7",
        "@vue/test-utils": "1.0.0-beta.29",
        "babel-core": "7.0.0-bridge.0",
        "babel-eslint": "^10.0.3",
        "babel-jest": "24.8.0",
        "chromedriver": "^77.0.0",
        "core-js": "^3.2.1",
        "cross-env": "^6.0.0",
        "cssnano-preset-advanced": "^4.0.7",
        "electron": "^6.0.12",
        "electron-icon-builder": "^1.0.1",
        "eslint": "^6.3.0",
        "image-webpack-loader": "^6.0.0",
        "jest": "^24.9.0",
        "jest-canvas-mock": "^2.1.1",
        "lint-staged": "^9.4.2",
        "npm-run-all": "^4.1.5",
        "postcss-font-magician": "^2.2.2",
        "postcss-normalize": "^8.0.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^1.18.2",
        "stylelint": "^11.0.0",
