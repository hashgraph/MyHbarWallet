        "@types/jest": "^24.0.18",
        "@types/jspdf": "^1.3.1",
        "@types/node": "^12.7.12",
        "@types/prettier": "1.18.3",
        "@types/ua-parser-js": "^0.7.33",
        "@types/zxcvbn": "^4.4.0",
