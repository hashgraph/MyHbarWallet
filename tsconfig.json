{
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "vite/client",
      "@intlify/vite-plugin-vue-i18n/client"
    ]
  },
  "include": [
    "@types",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "src/utils/json-bignumber.js"
  ]
}
